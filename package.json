{
  "name": "tsfv",
  "version": "1.0.2",
  "description": "Typescript Fluent Validation Library",
  "keywords": [
    "typescript",
    "validation"
  ],
  "homepage": "https://github.com/trevorr/tsfv#readme",
  "bugs": {
    "url": "https://github.com/trevorr/tsfv/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trevorr/tsfv.git"
  },
  "license": "ISC",
  "author": "Trevor Robinson",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "browser": "dist/tsfv.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc --project src && tsc --project src/tsconfig-browser.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:ci": "eslint 'src/**/*.ts' --format junit --output-file test-results/eslint/eslint.xml",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "prettier": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "nyc mocha 'test/**/*.test.ts'"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true
  },
  "nyc": {
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.24",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "mocha": "^7.1.2",
    "mocha-junit-reporter": "^1.23.3",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
