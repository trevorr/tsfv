{
  "name": "tsfv",
  "version": "1.0.0",
  "description": "Typescript Fluent Validation Library",
  "keywords": [
    "typescript",
    "validation"
  ],
  "homepage": "https://github.com/trevorr/tsfv#readme",
  "bugs": {
    "url": "https://github.com/trevorr/tsfv/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trevorr/tsfv.git"
  },
  "license": "ISC",
  "author": "Trevor Robinson",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --declaration --project src",
    "lint": "eslint 'src/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "prettier": "prettier --write 'src/**/*.ts' 'test/**/*.test.ts'",
    "test": "nyc --check-coverage --extension .ts -r text -r html mocha --forbid-only 'test/**/*.test.ts'"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true
  },
  "nyc": {
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.21",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "mocha": "^6.2.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  }
}
